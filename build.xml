<!-- Build file for text-rpg -->
<project name="text-rpg" basedir=".">
  <description>Need a description here</description>

  <!-- Basic build target. -->
  <target name="compile">
    <javac includeantruntime="false" srcdir="src" destdir="build/classes"/>
  </target>

  <!-- Basic jar target. -->
  <target name="jar">
    <jar basedir="build/classes" destfile="build/jar/RPG.jar"/>
  </target>
  <!-- Basic clean target. -->
  <target name="clean">
    <delete>
      <fileset dir="build"/>
    </delete>
  </target>
</project>
